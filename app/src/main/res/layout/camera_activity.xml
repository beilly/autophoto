<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center">

    <SurfaceView
        android:id="@+id/camera_surfaceView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@color/bg_black">

            <ImageView
                android:id="@+id/camera_img_cameraTrans"
                android:layout_width="26.7dp"
                android:layout_height="21dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                android:src="@mipmap/icon_camera" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1">


            <ImageView
                android:id="@+id/camera_img_style"
                android:layout_width="248dp"
                android:layout_height="382.3dp"
                android:layout_centerInParent="true"
                android:src="@mipmap/photo_idcard_model" />
        </RelativeLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="108dp"
            android:layout_alignParentBottom="true"
            android:background="@color/bg_black"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/camera_txt_cancel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="40dp"
                android:text="取消"
                android:textColor="@color/font_white"
                android:textSize="@dimen/fontSize_20" />

            <ImageView
                android:id="@+id/camera_img_takepicture"
                android:layout_width="60.7dp"
                android:layout_height="60.7dp"
                android:background="@mipmap/icon_takephoto" />

            <TextView
                android:id="@+id/camera_txt_enter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="40dp"
                android:text="确认"
                android:textColor="@color/font_white"
                android:textSize="@dimen/fontSize_20" />
        </LinearLayout>
    </LinearLayout>
</FrameLayout>
